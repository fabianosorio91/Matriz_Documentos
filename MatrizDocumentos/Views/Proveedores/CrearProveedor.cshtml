@model Dominio.Proveedor

@{
    ViewData["Title"] = "Crear Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool Visible = ViewBag.Visible;
    string cadena = Visible ? "" : "d-none";
}

<div style="background-color: #06112D; width: 60%; border-radius: 2%" class="mx-auto" >
    <div d-flex flex-column justify-content-center" class="mp-2">
        <!-- <img src="~/img/Logo Nexos.png" alt="" srcset="" width="30%">-->
        <h4 style="color:blanchedalmond ; text-align: center; padding-top: 12px" class="modal-title; shadow;">Crear Proveedor</h4>
    </div>
    <div id="FormularioCrear">

        <div class="modal-body" style=" height: 365px">
            <form asp-action="CrearProveedor">

                <div class="mb-3">
                    <input type="text" asp-for="@Model.NOMBRE" class="form-control" placeholder="Nombre">
                    <span asp-validation-for="@Model.NOMBRE" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="text" asp-for="@Model.NIT" class="form-control" placeholder="Nit">
                    <span asp-validation-for="@Model.NIT" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="text" asp-for="@Model.CONTACTO" class="form-control" placeholder="Contacto">
                    <span asp-validation-for="@Model.CONTACTO" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="email" asp-for="@Model.EMAIL" class="form-control" placeholder="Email">
                    <span asp-validation-for="@Model.EMAIL" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="text" asp-for="@Model.TELEFONO" class="form-control" placeholder="Telefono">
                    <span asp-validation-for="@Model.TELEFONO" class="text-danger"></span>
                </div>
                <div class=" mb-3">
                    <div class="form-check form-switch">

                        <input class="form-check-input" type="checkbox" checked="" asp-for="@Model.ESTADO">
                        <label class="form-check-label" style="margin-top: -11px; color:blanchedalmond " for="flexSwitchCheckDefault">Activo</label>

                    </div>
                </div>

                <div class="@cadena" style="width: 110px">
                    <span class=" text-danger">NIT YA EXISTE!!!</span>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Crear</button>
                    <a class="btn btn-secondary" asp-controller="Ordenes" asp-action="index" >Cancelar</a>
                </div>


            </form>

        </div>

    </div>


</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}




